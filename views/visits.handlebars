<div>
    {{#each visits as |visit|}}
    <div class="container">
        <div class="accordion" id="accordionExample">
            <div class="card">
                <div class="card-header" id="headingOne">
                    <h2 class="mb-0">
                        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#1234"
                            aria-expanded="true" aria-controls="1234">
                            {{format_date visit.createdAt}}
                        </button>
                    </h2>
                </div>

                <div id="1234" class="collapse show" aria-labelledby="headingOne"
                    data-parent="#accordionExample">
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <b></b>Doctor:</b> {{visit.doctor.first_name}} {{visit.doctor.last_name}}
                                <br><b></b>Phone Number:</b> {{visit.doctor.phone}}
                                <br><b></b>Email:</b> {{visit.doctor.email}}
                            </li>
                            <li class="list-group-item">
                                <b></b>Patient:</b> {{visit.patient.first_name}} {{visit.patient.last_name}}
                                <br><b></b>Phone Number:</b> {{visit.patient.phone}}
                                <br><b></b>Email:</b> {{visit.patient.email}}
                            <li class="list-group-item">
                                <b></b>Ailment:</b> {{visit.ailment.ailment_name}}
                                <br><b></b>Treatment:</b> {{visit.ailment.treatment}}
                            </li>
                            <li class="list-group-item">
                                <b></b>Note:</b> {{visit.visit_note}}
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}