<div class="container">
    <div class="container-fluid">
        <div class="row">
    
            {{#each visits as |visit|}}
            <div class="col-lg-4 my-3 h6">
                <div class="card text-center" style="width: 18rem;">
                    <div class="card-header h5 text-primary font-weight-bold">
                        {{format_date visit.createdAt}}
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Patient: {{visit.patient.first_name}} {{visit.patient.last_name}}</li>
                        <li class="list-group-item">Doctor:{{visit.doctor.first_name}} {{visit.doctor.last_name}}</li>
                        <li class="list-group-item">{{visit.visit_note}}</li>
                    </ul>
                    <div class="card-footer">
                        <a href="#" class="btn btn-primary">Edit</a>
                        <a href="#" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
            
            {{/each}}
    
        </div>
    </div>
</div>